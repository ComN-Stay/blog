{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <h1>Posts</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ post.summary }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ post.picture }}</td>
            </tr>
            <tr>
                <th>Date_add</th>
                <td>{{ post.dateAdd ? post.dateAdd|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ post.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_posts_account_index') }}">back to list</a>

    <a href="{{ path('app_posts_account_edit', {'id': post.id}) }}">edit</a>

    {{ include('posts_account/_delete_form.html.twig') }}
{% endblock %}
